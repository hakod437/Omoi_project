{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "node node_modules/turbo/bin/turbo run build",
    "dev": "node node_modules/turbo/bin/turbo run dev",
    "lint": "node node_modules/turbo/bin/turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "node node_modules/turbo/bin/turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "20": "^3.1.9"
  }
}
